@model Meeeedium.Models.Blog

<header class="intro-header" style="background-image: url(/img/home-bg.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1>Write a Blog Post</h1>
                    <h2 class="subheading">Take a second to really express yourself!</h2>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                @using (Html.BeginForm("Create", "Blog"))
                {
                    @Html.AntiForgeryToken()

                    <p>
                        @Html.TextBox("Title", null, new { @class = "form-control", placeholder = "Title" })
                    </p>
                    <p>
                        @Html.TextBox("TeaserText", null, new { @class = "form-control", placeholder = "TeaserText" })
                    </p>
                    <p>
                        @Html.TextArea("Body", null, new { @class = "form-control", placeholder = "Write Blog Here..." })
                    </p>
                    <p>
                        Public: @Html.CheckBox("Public")
                    </p>
                    <p>
                        <input type="submit" class="btn btn-primary" value="Publish" />
                    </p>
                }

                <div>
                    @Html.ActionLink("Back to Blogs", "Index")
                </div>
            </div>
        </div>
    </div>
</div>