@model IEnumerable<Meeeedium.Models.Blog>


<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url(/img/home-bg.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Blog Post Entries</h1>
                    <hr class="small">
                    <span class="subheading">Create, Edit, Delete posts</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <input type="submit" value="Write a Blog" class="btn btn-primary" />
    <hr />
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Public)
            </th>
        </tr>

        @foreach (var blog in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => blog.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => blog.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => blog.Public)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = blog.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = blog.Id })
                </td>
            </tr>
        }
    </table>
</div>